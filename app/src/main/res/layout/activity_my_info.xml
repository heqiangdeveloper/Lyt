<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <include layout="@layout/activity_settings_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        android:layout_marginBottom="40dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <TextView
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="资料审核中"
                android:background="@color/white"
                android:textColor="@color/black_33"
                android:textSize="@dimen/main_text_size"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本人身份证"
                android:gravity="center"
                android:background="@color/white"
                android:textColor="@color/black_33"
                android:textSize="@dimen/main_text_size"/>
            <FrameLayout
                android:id="@+id/font_side_fl"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="@dimen/my_info_area_margin"
                android:layout_marginLeft="@dimen/my_info_area_margin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_layout"
                android:padding="@dimen/my_info_area_padding">
                <ImageView
                    android:id="@+id/font_side_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/idcard_font"/>
                <TextView
                    android:id="@+id/upload_tv1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_info_upload_height"
                    android:text="点击上传"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/colorPrimary2"
                    android:textColor="@color/white"/>
            </FrameLayout>
            <TextView
                android:layout_marginTop="@dimen/my_info_area_label_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证人像页"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size"/>
            <FrameLayout
                android:id="@+id/behind_side_fl"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginRight="@dimen/my_info_area_margin"
                android:layout_marginLeft="@dimen/my_info_area_margin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_layout"
                android:padding="@dimen/my_info_area_padding">
                <ImageView
                    android:id="@+id/behind_side_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/idcard_behind"/>
                <TextView
                    android:id="@+id/upload_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_info_upload_height"
                    android:text="点击上传"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="@color/colorPrimary2"
                    android:textColor="@color/white"/>
            </FrameLayout>
            <TextView
                android:layout_marginTop="@dimen/my_info_area_label_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="身份证国徽页"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_size"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/commit_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提交"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:textColor="@color/title_color"
        android:textSize="@dimen/main_text_size"/>

</android.support.design.widget.CoordinatorLayout>
