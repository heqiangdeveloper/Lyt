<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:circleimageview="http://schemas.android.com/apk/com.cimcitech.lyt.activity.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
        app:layout_scrollFlags="enterAlways|snap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:navigationIcon="@null"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <LinearLayout
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:background="@color/white"
                android:orientation="vertical"
                 android:padding="0dp">

            <!--logo-->
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dip"
                android:src="@mipmap/login_app_icon_new" />-->

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="粮易通"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:gravity="center"/>

            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="invisible"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/user_icon"
                    circleimageview:border_width="2dp"
                    circleimageview:border_overlay="false"
                    circleimageview:border_color="#FF000000"
                    android:layout_alignParentStart="true"/>
                <!--<TextView-->
                    <!--android:id="@+id/new_user_tv"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:text="新用户注册"-->
                    <!--android:textSize="14sp"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:textColor="@color/white"/>-->
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/welcome_tv1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello! Tony"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/welcome_tv2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dip"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="35dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/corners_button_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:src="@mipmap/login_icon_1" />

                    <EditText
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dip"
                        android:background="@null"
                        android:hint="请输入用户名"
                        android:singleLine="true"
                        android:text="15768616002"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black_33"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/clear_name_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dip"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_clear_edittext" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="@dimen/regist_divide_margin"
                    android:layout_marginRight="20dip"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:src="@mipmap/login_icon_2" />

                    <EditText
                        android:id="@+id/password_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:text="15768616002"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:textColorHint="@color/black_33"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/clear_password_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dip"
                        android:src="@mipmap/icon_clear_edittext" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_marginLeft="@dimen/regist_divide_margin"
                    android:layout_marginRight="20dip"
                    android:background="@color/colorPrimary" />
            </LinearLayout>


            <Button
                android:id="@+id/login_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/shape_login_button_off"
                android:text="登录"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dip"
                android:layout_marginRight="35dip"
                android:layout_marginTop="20dip"
                android:background="@color/transparent">
                <TextView
                    android:id="@+id/forget_psd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="忘记密码"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/black_33"/>
                <TextView
                    android:id="@+id/new_user_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="新用户注册"
                    android:textSize="14sp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black_33"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>
