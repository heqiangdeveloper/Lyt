            <!--app:textColorNormal="@color/tab_normal_color"-->
            <!--app:textColorSelected="@color/colorPrimary"-->
            <!--app:itemTextSize="@dimen/bottombar_item_text_size"-->
            <!--app:itemMarginTop="@dimen/bottombar_item_margin_top"-->
            <!--/>-->

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/ic_preson_off"
            app:iconSelected="@mipmap/ic_personal_on"
            app:itemText="@string/tab_my_label"
            app:textColorNormal="@color/tab_normal_color"
            app:textColorSelected="@color/colorPrimary"
            app:itemTextSize="@dimen/bottombar_item_text_size"
            app:itemMarginTop="@dimen/bottombar_item_margin_top"
            />

    </com.chaychan.library.BottomBarLayout>
</LinearLayout>