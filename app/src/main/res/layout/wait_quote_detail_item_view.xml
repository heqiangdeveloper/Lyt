<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="2dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startPortName_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="深圳蛇口港"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="→"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:id="@+id/endPortName_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="大连鲅鱼圈港"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/planloadingdate_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="2018-10-21"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="→"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:id="@+id/planarrivedate_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2018-10-29"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/varietyName_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="玉米"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="120吨"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
                <TextView
                    android:id="@+id/issuetime_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="昨天"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_text_size" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/start_quote_tv"
            android:text="@string/start_quote_label"
            android:background="@color/colorPrimary"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="6dp"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
